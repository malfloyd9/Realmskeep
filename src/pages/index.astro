---
import { Fragment } from 'astro/jsx-runtime';
import Layout from '../layouts/Layout.astro';
---

<Layout
    title="Realm's Keep | Gaming Gear"
    description="Custom accessories for the modern tabletop gamer. Handcrafted dice trays, gaming gear, and accessories. Est. 2022."
    canonicalURL="https://realmskeep.com"
    isHome
>
    <section class="hero">
        <div class="container">
            <h1>Equip Your Stronghold</h1>
            <p>Custom accessories for the modern tabletop gamer. Est. 2022.</p>
            <a href="https://www.etsy.com/shop/RealmsKeep" target="_blank" class="btn" data-analytics-cta-id="hero_browse_the_hoard">Browse The Hoard</a>
        </div>
    </section>

    <section class="testimonials-section" aria-label="Customer testimonials">
        <h2 class="section-title">What Adventurers Are Saying</h2>
        <div class="testimonials-track" role="list" aria-live="off">
            <!-- Cards rendered by testimonials.js from testimonials.json -->
        </div>
    </section>

    <section id="shop" class="collection-section">
        <div class="container">
            <h2 class="section-title">The Cantrip Collection</h2>
            
            <a href="https://www.etsy.com/shop/RealmsKeep?section_id=42166342" target="_blank" class="collection-image-wrapper">
                <img src="/assets/cantrips.jpg" alt="The Cantrip Collection of spell-themed accessories" data-pin-nopin="true">
            </a>
            <div class="collection-cta">
                <a href="https://www.etsy.com/shop/RealmsKeep?section_id=42166342" target="_blank" class="btn" data-analytics-cta-id="collection_view_cantrips">View Cantrips</a>
            </div>
        </div>
    </section>

    <section class="collection-section">
        <div class="container">
            <h2 class="section-title">Realm's Keep Apparel</h2>
            
            <a href="https://www.etsy.com/shop/RealmsKeep?section_id=42166330" target="_blank" class="collection-image-wrapper">
                <img src="/assets/shirts.jpg" alt="T-shirts and apparel from Realm's Keep" data-pin-nopin="true">
            </a>
            <div class="collection-cta">
                <a href="https://www.etsy.com/shop/RealmsKeep?section_id=42166330" target="_blank" class="btn" data-analytics-cta-id="collection_shop_apparel">Shop Apparel</a>
            </div>
        </div>
    </section>

    <section class="collection-section">
        <div class="container">
            <h2 class="section-title">Mugs & Drinkware</h2>
            
            <a href="https://www.etsy.com/shop/RealmsKeep?section_id=42166346" target="_blank" class="collection-image-wrapper">
                <img src="/assets/mugs.jpeg" alt="Gamer and fantasy themed mugs from Realm's Keep" data-pin-nopin="true">
            </a>
            <div class="collection-cta">
                <a href="https://www.etsy.com/shop/RealmsKeep?section_id=42166346" target="_blank" class="btn" data-analytics-cta-id="collection_discover_drinkware">Discover Drinkware</a>
            </div>
        </div>
    </section>

    <Fragment slot="scripts">
        <script is:inline src="/testimonials.js"></script>
    </Fragment>
</Layout>
